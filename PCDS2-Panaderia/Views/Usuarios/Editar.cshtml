@model UsuariosModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="imgEditarUser">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card" style="border: 1px solid white">
                    <div class="card-header bg-dark text-white">
                        <h2 class="text-center"><strong>Editar Datos del Usuario</strong></h2>
                    </div>
                    <div class="card-body bg-dark text-white">
                        <form asp-action="Editar" asp-controller="Usuarios" method="post">
                            <input asp-for="idUsuario" type="hidden" class="form-control">
                            <div class="mb-3">
                                <label class="form-label">Nombre de Usuario</label>
                                <input asp-for="usuario" type="text" class="form-control">
                                <span asp-validation-for="usuario" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Correo Electronico</label>
                                <input asp-for="correo" type="text" class="form-control">
                                <span asp-validation-for="correo" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Contraseña</label>
                                <input asp-for="clave" type="text" class="form-control">
                                <span asp-validation-for="clave" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Roles</label>
                                <select asp-for="rol" class="form-control">
                                    <option value="USER">Usuario</option>
                                    <option value="ADMIN">Administrador</option>
                                </select>
                                <span asp-validation-for="rol" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-cloud-download-fill"></i> Guardar</button>
                            <a asp-action="ListarUser" asp-controller="Usuarios" class="btn btn-warning"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

