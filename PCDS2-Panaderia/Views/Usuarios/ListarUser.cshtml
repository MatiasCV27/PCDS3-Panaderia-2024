@model List<UsuariosModel>
@{
    ViewData["Title"] = "ListarUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card bg-dark text-white">
    <div class="card-header">
        Listado de Usuarios
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Usuarios" class="btn btn-success"><i class="bi bi-person-plus-fill"></i> Registrar</a>
        <hr />
        <table class="table table-dark table-hover table-bordered-white" style="border: 1px solid white;">
            <thead>
                <tr>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Usuario</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Correo</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Contraseña</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Rol</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Editar</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Eliminar</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center" style="vertical-align: middle; border: 1px solid white;">@item.usuario</td>
                        <td class="text-center" style="vertical-align: middle; border: 1px solid white;">@item.correo</td>
                        <td class="text-center" style="vertical-align: middle; border: 1px solid white;">@item.clave</td>
                        <td class="text-center" style="vertical-align: middle; border: 1px solid white;">@item.rol</td>
                        <td class="text-center" style="vertical-align: middle; border: 1px solid white;" class="text-center">
                            <a asp-action="Editar" asp-controller="Usuarios" class="btn btn-primary" asp-route-idUsuario="@item.idUsuario"><i class="bi bi-pencil-square"></i></a>
                        </td>
                        <td style="vertical-align: middle;" class="text-center">
                            <a asp-action="Eliminar" asp-controller="Usuarios" class="btn btn-danger" asp-route-idUsuario="@item.idUsuario"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>